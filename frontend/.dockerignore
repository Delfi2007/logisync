# .dockerignore for Frontend
# Ignore node_modules (will be installed in container)
node_modules/
npm-debug.log

# Ignore build artifacts (will be built in container)
dist/
build/
.vite/

# Ignore test files
tests/
*.test.ts
*.test.tsx
*.spec.ts
*.spec.tsx
coverage/

# Ignore development files
.env
.env.local
.env.*.local
vite.config.ts.timestamp-*

# Ignore git files
.git/
.gitignore
.gitattributes

# Ignore editor files
.vscode/
.idea/
*.swp
*.swo
*~

# Ignore documentation
docs/
README.md
*.md

# Ignore CI/CD files
.github/
.gitlab-ci.yml

# Ignore OS files
.DS_Store
Thumbs.db
